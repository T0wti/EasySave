<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EasySave.Application.ViewModels"
        xmlns:views="using:EasySave.GUI.Views"
        x:Class="EasySave.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="EasySave"
        Width="600"
        Height="500">

    <Window.DataTemplates>
        
        <DataTemplate DataType="{x:Type vm:BaseMenuViewModel}">
            <views:BaseMenu/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:ListBackupMenuViewModel}">
            <views:ListBackupMenu/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:BackupDetailMenuViewModel}">
            <views:BackupDetailMenu/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:SettingsMenuViewModel}">
            <views:SettingsMenu/>
        </DataTemplate>
        
    </Window.DataTemplates>

    <ContentControl Content="{Binding CurrentView}"/>
</Window>