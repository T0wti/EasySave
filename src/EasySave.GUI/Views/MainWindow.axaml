<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:EasySave.GUI.Views"
        xmlns:viewModels="clr-namespace:EasySave.GUI.ViewModels"
        x:Class="EasySave.GUI.Views.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Title="EasySave"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600"
        Icon="/Assets/easysave-icon2.ico"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource MainBackground}"
        Foreground="{StaticResource TextPrimary}">

    <Window.DataTemplates>
        
        <DataTemplate DataType="{x:Type viewModels:BaseMenuViewModel}">
            <views:BaseMenu/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:CreateBackupMenuViewModel}">
            <views:CreateBackupMenu></views:CreateBackupMenu>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:ExecuteBackupMenuViewModel}">
            <views:ExecuteBackupMenu/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:DeleteBackupMenuViewModel}">
            <views:DeleteBackupMenu/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:EditBackupMenuViewModel}">
            <views:EditBackupMenu/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:EditBackupDetailMenuViewModel}">
            <views:EditBackupDetailMenu/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:ListBackupMenuViewModel}">
            <views:ListBackupMenu/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:BackupDetailMenuViewModel}">
            <views:BackupDetailMenu/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:SettingsMenuViewModel}">
            <views:SettingsMenu/>
        </DataTemplate>
        
    </Window.DataTemplates>

    <SplitView IsPaneOpen="{Binding IsPaneOpen}"
               DisplayMode="CompactInline"
               CompactPaneLength="65"
               OpenPaneLength="250">
        
        <SplitView.Pane>
            <Border Background="{StaticResource SidebarBackground}">
                <Grid RowDefinitions="Auto, *, Auto">
                    
                    <StackPanel Grid.Row="0" Spacing="15" Margin="10,20,10,30">
                        <Button Command="{Binding TogglePaneCommand}" 
                                Background="Transparent" 
                                Width="45" Height="45" 
                                HorizontalAlignment="Left"
                                FontSize="24">
                            <TextBlock Text="â˜°" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                        
                        <Button Command="{Binding NavigateToBaseMenuCommand}" 
                                Background="Transparent" 
                                Padding="0" 
                                IsVisible="{Binding IsPaneOpen}">
                            <Image Source="/Assets/easysave-logo.png" Width="180"/>
                        </Button>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Margin="10,0">
                        <!-- Home button -->
                        <Button Classes="MenuBtn" Classes.active="{Binding IsBaseActive}" Command="{Binding NavigateToBaseMenuCommand}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Data value is to generate SVG. Code obtained from pictogrammers.com -->
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M12 5.69L17 10.19V18H15V12H9V18H7V10.19L12 5.69M12 3L2 12H5V20H11V14H13V20H19V12H22"/>
                                <TextBlock Grid.Column="1" Text="0. Home" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>

                        <!-- Create Backup button -->
                        <Button Classes="MenuBtn" Classes.active="{Binding IsCreateActive}" Command="{Binding NavigateToCreateBackupCommand}">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                                <TextBlock Grid.Column="1" Text="{Binding CreateBackup}" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>

                        <!-- Delete Backup button -->
                        <Button Classes="MenuBtn" Classes.active="{Binding IsDeleteActive}" Command="{Binding NavigateToDeleteBackupCommand}">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M20.37,8.91L19.37,10.64L7.24,3.64L8.24,1.91L11.28,3.66L12.64,3.29L16.97,5.79L17.34,7.16L20.37,8.91M6,19V7H11.07L18,11V19A2,2 0 0,1 16,21H8A2,2 0 0,1 6,19M8,19H16V12.2L10.46,9H8V19Z"/>
                                <TextBlock Grid.Column="1" Text="{Binding DeleteBackup}" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Edit Backup button -->
                        <Button Classes="MenuBtn" Classes.active="{Binding IsEditActive}" Command="{Binding NavigateToEditBackupCommand}">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M14.06,9L15,9.94L5.92,19H5V18.08L14.06,9M17.66,3C17.41,3 17.15,3.1 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18.17,3.09 17.92,3 17.66,3M14.06,6.19L3,17.25V21H6.75L17.81,9.94L14.06,6.19Z"/>
                                <TextBlock Grid.Column="1" Text="{Binding EditBackup}" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- List Backup button -->
                        <Button Classes="MenuBtn" Classes.active="{Binding IsListActive}" Command="{Binding NavigateToListBackupCommand}">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M11 15H17V17H11V15M9 7H7V9H9V7M11 13H17V11H11V13M11 9H17V7H11V9M9 11H7V13H9V11M21 5V19C21 20.1 20.1 21 19 21H5C3.9 21 3 20.1 3 19V5C3 3.9 3.9 3 5 3H19C20.1 3 21 3.9 21 5M19 5H5V19H19V5M9 15H7V17H9V15Z"/>
                                <TextBlock Grid.Column="1" Text="{Binding ListBackup}" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Execute Backup button -->
                        <Button Classes="MenuBtn" Classes.active="{Binding IsExecuteActive}" Command="{Binding NavigateToExecuteBackupCommand}">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M8.5,8.64L13.77,12L8.5,15.36V8.64M6.5,5V19L17.5,12"/>
                                <TextBlock Grid.Column="1" Text="{Binding ExeBackup}" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,15"/>

                        <!-- Settings button -->
                        <Button Classes="MenuBtn" Classes.active="{Binding IsSettingsActive}" Command="{Binding NavigateToSettingsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.21,15.05 2.27,14.78 2.46,14.63L4.57,12.97L4.5,12L4.57,11L2.46,9.37C2.27,9.22 2.21,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.79,8.95 21.73,9.22 21.54,9.37L19.43,11L19.5,12L19.43,13L21.54,14.63C21.73,14.78 21.79,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10M11.25,4L10.88,6.61C9.68,6.86 8.62,7.5 7.85,8.39L5.44,7.35L4.69,8.65L6.8,10.2C6.4,11.37 6.4,12.64 6.8,13.8L4.68,15.36L5.43,16.66L7.86,15.62C8.63,16.5 9.68,17.14 10.87,17.38L11.24,20H12.76L13.13,17.39C14.32,17.14 15.37,16.5 16.14,15.62L18.57,16.66L19.32,15.36L17.2,13.81C17.6,12.64 17.6,11.37 17.2,10.2L19.31,8.65L18.56,7.35L16.15,8.39C15.38,7.5 14.32,6.86 13.12,6.62L12.75,4H11.25Z"/>
                                <TextBlock Grid.Column="1" Text="{Binding Settings}" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Exit button -->
                        <Button Classes="MenuBtn DangerBtn" Command="{Binding ExitCommand}">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Grid.Column="0" Classes="MenuIcon"
                                          Data="M19,3H5C3.89,3 3,3.89 3,5V9H5V5H19V19H5V15H3V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M10.08,15.58L11.5,17L16.5,12L11.5,7L10.08,8.41L12.67,11H3V13H12.67L10.08,15.58Z"/>
                                <TextBlock Grid.Column="1" Text="{Binding Exit}" IsVisible="{Binding IsPaneOpen}"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </SplitView.Pane>

        <SplitView.Content>
            <Border Padding="40,30">
                <TransitioningContentControl Content="{Binding CurrentView}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TransitioningContentControl.PageTransition>
                        <CrossFade Duration="0:0:0.75"/>
                    </TransitioningContentControl.PageTransition>
                </TransitioningContentControl>
            </Border>
        </SplitView.Content>
    </SplitView>
</Window>