<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:EasySave.GUI.ViewModels"
             xmlns:controls="using:EasySave.GUI.Views"
             x:Class="EasySave.GUI.Views.EditBackupDetailMenu"
             x:DataType="viewModels:EditBackupDetailMenuViewModel">

    <UserControl.Styles>

        <Style Selector="TextBox.error /template/ Border#PART_BorderElement">

            <Setter Property="BorderBrush" Value="Red"/>

            <Setter Property="BorderThickness" Value="1.5"/>

        </Style>

    </UserControl.Styles>
    
    <ScrollViewer>
        <StackPanel Margin="30" Spacing="20">
            <controls:PageTitleControl/>

            <Border Background="{StaticResource CardBackground}" CornerRadius="8" Padding="12" BoxShadow="0 4 12 0 #10000000">
                <StackPanel Spacing="25">
                    <!--- Backup name -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding AskName}"/>
                        <TextBox Text="{Binding BackupName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Classes.error="{Binding NameHasError}"/>
                    </StackPanel>

                    <!-- Backup source -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding AskName}"/>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <TextBox Text="{Binding BackupSourcePath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Classes.error="{Binding SourceHasError}"/>
                            <Button Grid.Column="1" Content="{Binding BrowseFile}" Command="{Binding BrowseSourceCommand}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Backup target -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding AskTarget}"/>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <TextBox Text="{Binding BackupTargetPath,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Classes.error="{Binding TargetHasError}"/>
                            <Button Grid.Column="1" Content="{Binding BrowseFile}" Command="{Binding BrowseTargetCommand}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Backup Type -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding AskType}" TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Spacing="30">
                            <RadioButton Content="{Binding FullType}" GroupName="BackupType" Command="{Binding SetFullTypeCommand}" IsChecked="{Binding IsFullTypeBase}"/>
                            <RadioButton Content="{Binding DifferentialType}" GroupName="BackupType" Command="{Binding SetDifferentialTypeCommand}" IsChecked="{Binding IsDifferentialTypeBase}"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Margin="0,10" Background="#F0F0F0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                        <Button Content="{Binding Confirm}" 
                                Classes="ActionBtn" 
                                Command="{Binding EditBackupCommand}"/>
                        
                        <controls:ReturnButton/>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="{Binding ErrorMessage}" Classes="ErrorMessage" IsVisible="{Binding IsThereError}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
