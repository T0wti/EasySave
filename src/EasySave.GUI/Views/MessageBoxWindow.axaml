<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:EasySave.GUI.ViewModels"
        x:Class="EasySave.GUI.Views.MessageBoxWindow"
        x:DataType="viewModels:MessageBoxViewModel"
        Title="{Binding Title}"
        Width="350" Height="180"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="{StaticResource MainBackground}"
        ExtendClientAreaToDecorationsHint="True">
        <!-- ExtendClientAreaToDecorationsHint="True" : removes title -->
    
    <Border Padding="20" BorderBrush="{StaticResource AccentColor}" BorderThickness="0,4,0,0">
        <Grid RowDefinitions="*, Auto">
            
            <TextBlock Grid.Row="0" Text="{Binding Message}" 
                       TextWrapping="Wrap" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Classes="MessageText" Classes.ErrorMessage="{Binding IsError}"/>
            
            <Button Grid.Row="1" Content="Ok" Classes="ActionBtn" 
                    HorizontalAlignment="Center" Width="100"
                    Command="{Binding OkButton_Click}" CommandParameter="{Binding $parent[Window]}"/>
        </Grid>
    </Border>
</Window>