<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:EasySave.GUI.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:EasySave.GUI.ViewModels"
             mc:Ignorable="d"
             x:Class="EasySave.GUI.Views.ListBackupMenu"
             x:DataType="viewModels:ListBackupMenuViewModel">
    


    <Grid RowDefinitions="Auto, *">
        <StackPanel Spacing="20" Margin="30">
        
            <!-- Title -->
            <TextBlock Text="{Binding Title}"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        
            <!-- Jobs list -->
            <controls:BackupJobsList Jobs="{Binding BackupJobs}"
                                     SelectedJob="{Binding SelectedJob}"/>
        
            <!-- Exit -->
            <Button Content="{Binding Exit}"
                    Command="{Binding ExitCommand}"
                    HorizontalAlignment="Center"/>
    
        </StackPanel>






	    <StackPanel Grid.Row="0" Margin="30,25,30,0" Spacing="5">
            <!-- Title -->
            <TextBlock Text="{Binding Title}" Classes="PageTitle"/>
        </StackPanel>
        
        <Border Grid.Row="1" Margin="30" Background="{StaticResource CardBackground}" CornerRadius="8" BoxShadow="0 4 12 0 #10000000" Padding="15">
			<DockPanel LastChildFill="True">
				
                <DataGrid ItemsSource="{Binding BackupJobs}" AutoGenerateColumns="False" IsReadOnly="True" GridLinesVisibility="None" BorderThickness="0">
                    <DataGrid.Columns>

                        <!-- TO DO: BINDINGS -->
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="2*"/>
                        <DataGridTextColumn Header="Target" Binding="{Binding TargetPath}" Width="2*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                        
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>
        </Border>

        <!-- Old -->
        <StackPanel>
		    <!-- Jobs list -->
            <!--
            <ListBox ItemsSource="{Binding BackupJobs}" 
                     SelectedItem="{Binding SelectedJob}"
                     Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="dto:BackupJobDTO">
                        <Border Padding="10" 
                                Background="#2d2d2d" 
                                CornerRadius="5"
                                Margin="0,2">
                            <TextBlock Text="{Binding Name}" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            -->
            <!-- Exit -->
            <!--
            <Button Content="{Binding Exit}" 
                    Command="{Binding ExitCommand}" 
                    HorizontalAlignment="Center"/>
            -->
        </StackPanel>
    </Grid>
</UserControl>