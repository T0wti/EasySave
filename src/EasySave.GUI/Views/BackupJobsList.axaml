<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dto="using:EasySave.Application.DTOs"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="EasySave.GUI.Views.BackupJobsList"
             x:Name="This">
    
    <ListBox ItemsSource="{Binding #This.Jobs}"
             SelectedItem="{Binding #This.SelectedJob, Mode=TwoWay}"
             Background="Transparent"
             Name="JobsListBox">
        <ListBox.Styles>
            <Style Selector="ListBoxItem">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                <Setter Property="Background" Value="#16416c"/>
            </Style>
        </ListBox.Styles>
        <ListBox.ItemTemplate>
            <DataTemplate x:DataType="dto:BackupJobDTO">
                <Border Padding="10"
                        Background="#F0F0F0"
                        CornerRadius="5"
                        Margin="0,2">
                    <TextBlock Text="{Binding Name}"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>