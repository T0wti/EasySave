<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:EasySave.GUI.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:EasySave.GUI.ViewModels"
             mc:Ignorable="d"
             x:Class="EasySave.GUI.Views.ExecuteBackupMenu"
             x:DataType="viewModels:ExecuteBackupMenuViewModel">
    
    <StackPanel Spacing="20" Margin="30">
        
        <TextBlock Text="{Binding Title}" Classes="PageTitle" HorizontalAlignment="Center"/>
        
        <controls:BackupJobsList Jobs="{Binding BackupJobs}"
                                 SelectedJob="{Binding SelectedJob}"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
            
            <Button Content="{Binding Exit}"
                    Command="{Binding ExitCommand}"
                    VerticalAlignment="Center"
                    Width="100"
                    HorizontalContentAlignment="Center"/>
            
        </StackPanel>
        
    </StackPanel>
</UserControl>