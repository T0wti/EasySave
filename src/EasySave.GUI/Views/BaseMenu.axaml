<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EasySave.Application.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="EasySave.GUI.Views.BaseMenu"
        x:DataType="vm:BaseMenu"
        Width="600"
        Height="500"
        Title="EasySave">

    <Design.DataContext>
        <vm:BaseMenu/>
    </Design.DataContext>

    <Border Padding="30">
        <StackPanel Spacing="12">

            <!-- Title -->
            <TextBlock Text="{Binding Title}"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Backup actions -->
            <Button Content="{Binding CreateBackup}" />
            <Button Content="{Binding DeleteBackup}" />
            <Button Content="{Binding EditBackup}" />
            <Button Content="{Binding ListBackup}"/>
            <Button Content="{Binding ExeBackup}"/>

            <Separator Margin="0,15"/>

            <!-- Settings -->
            <Button Content="{Binding LogFormat}" />
            <Button Content="{Binding LanguageOption}" />

        </StackPanel>
    </Border>

</Window>