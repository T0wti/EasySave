<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EasySave.Application.ViewModels"
        x:Class="EasySave.GUI.Views.BaseMenu"
        x:DataType="vm:BaseMenu">

    <Design.DataContext>
        <vm:BaseMenu/>
    </Design.DataContext>

    <Border Padding="30">
        <StackPanel Spacing="12">

            <!-- Title -->
            <TextBlock Text="{Binding Title}"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Backup actions -->
            <Button Content="{Binding CreateBackup}" />
            <Button Content="{Binding DeleteBackup}" />
            <Button Content="{Binding EditBackup}" />
            <Button Content="{Binding ListBackup}"/>
            <Button Content="{Binding ExeBackup}"/>

            <Separator Margin="0,15"/>

            <!-- Settings -->
            <Button Content="{Binding Settings}" Command="{Binding NavigateToSettingsCommand}"/>
            
            <!-- Exit -->
            <Button Content="{Binding Exit}"></Button>
        </StackPanel>
    </Border>

</UserControl>